# Adds two numbers and takes the absolute value
fn add_abs(a: i32, b: i32) -> f32
{
    # let sum = %add(a, b); # auto type
    let mut sum: i32 = %add(a, b); #non auto type
    {
        sum = increase(sum, 1);
    }
    return %abs(sum);
}

fn increase(x: u8, i: scalar u8) -> u8
{
    let mut amount: scalar u8 = 0;
    amount = %add(amount, i);
    return %add(x, amount);
}
