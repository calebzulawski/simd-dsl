# Adds two numbers and takes the absolute value
fn add_abs(a: i32, b: i32) -> f32
{
    let sum = %add(a, b); # an inline comment
    {
        sum = increase(sum, 1);
    }
    return %abs(sum);
}

fn increase(x: u8, $i: u8) -> u8
{
    let $mut amount: u8 = 0;
    amount = %add(amount, i);
    return %add(x, amount);
}
