# Adds two numbers inefficiently
fn pass(x: i32, i: scalar i32) -> i32
{
    let mut amount = 0i32;
    amount = %add(amount, i);
    return x;
}

# Adds two numbers inefficiently
fn add2(a: i32, b: i32) -> i32
{
    let mut c = a;
    {
        c = pass(a, 1i32);
    }
    return %add(c, b);
}

# Tuple test
fn tup(a: i32, b: i32) -> (i32, i32)
{
    let mut c = (a, b);
    let (mut d, e) = c;
    return (a, b);
}
