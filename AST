program              : [definition]*;
definition           : Fn prototype scope;
prototype            : Identifier LeftParen [Identifier Colon Primitive Comma ?]* RightParen Arrow Primitive;
scope                : LeftBrace [statement | scope]* RightBrace;
statement            : [let_statement | return_statement | assignment_statement] Semicolon;
let_statement        : Let Mutable ? Identifier [Colon Primitive] ? Equals expression;
return_statement     : Return expression;
assignment_statement : Identifier Equals expression;
expression           : [Identifier | Number | call_expr];
call_expr            : Identifier LeftParen [expression Comma ?]* RightParen;
